{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": "./src",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@config/*": ["config/*"],
      "@graphql/*": ["graphql/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "app.ts"
  ]
}